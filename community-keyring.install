post_install() {
    if [ -x /usr/bin/pacman-key ]; then
        /usr/bin/pacman-key --init
        /usr/bin/pacman-key --populate community
        /usr/bin/pacman-key --recv-keys AECEEE84E52BBFAA9F1C9DF01EA0CEEEB09B44A3
        /usr/bin/pacman-key --lsign-key AECEEE84E52BBFAA9F1C9DF01EA0CEEEB09B44A3
    fi
}

post_upgrade() {
    post_install
}
